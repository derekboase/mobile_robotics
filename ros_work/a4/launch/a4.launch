<launch>
    
    <!-- creating arguments-->
    <arg name="x" default="0.0"/>
    <arg name="y" default="0.0"/>
    <arg name="world_name" default="empty.world"/>
    <arg name="model" value="burger"/>
    
    <!-- launching gazebo and turtlebot-->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_$(arg world_name)"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model turtlebot3_$(arg model) -x $(arg x) -y $(arg y) -param robot_description" />

    <!-- running sensed object node -->
    <node name="sensed_object" pkg="a4" type="sensed_object.py">
    </node>

    <!-- running drive robot node -->
    <node name="drive_robot" pkg="a4" type="drive_robot.py" required="true" launch-prefix="xterm -e">
    </node>

    <!-- running data reporter node -->
    <node name="data_reporter" pkg="a4" type="data_reporter.py" launch-prefix="xterm -e">
    </node>

    <!-- running rqt_graph -->
    <node name="rqt_graph" pkg="rqt_graph" type="rqt_graph"></node>

</launch>
